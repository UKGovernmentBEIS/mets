{
  "name": "uk-pmrv-main-web",
  "version": "0.81.0",
  "engines": {
    "node": "^18.10"
  },
  "scripts": {
    "postinstall": "node git-version.js",
    "ng": "ng",
    "start": "ng serve",
    "start:govuk-components": "ng build govuk-components --watch --configuration development",
    "test:govuk-components": "jest --config ./projects/govuk-components/jest.config.js",
    "test:govuk-components:watch": "jest --watch --config ./projects/govuk-components/jest.config.js",
    "test:govuk-components:coverage": "jest --coverage --config ./projects/govuk-components/jest.config.js",
    "test:frontend": "jest --config ./src/jest.config.js --silent --logHeapUsage --workerIdleMemoryLimit=1GB",
    "test:frontend:watch": "jest --watch --config ./src/jest.config.js",
    "test:frontend:coverage": "jest --coverage --config ./src/jest.config.js",
    "test:app:coverage": "yarn prebuild && yarn run test:frontend:coverage",
    "test:app:watch": "yarn build:govuk-components && yarn run test:frontend:watch",
    "build:govuk-components": "ng build govuk-components",
    "build:pmrv-api": "ng build pmrv-api",
    "prebuild": "yarn build:govuk-components && yarn build:pmrv-api",
    "build": "ng build",
    "prebuild:production": "yarn build:govuk-components && yarn build:pmrv-api",
    "build:production": "ng build",
    "generate:barrels:api": "barrelsby -d projects/pmrv-api/src/lib/ -l all -D",
    "pregenerate:api": "openapi-generator-cli generate -i ./projects/pmrv-api/src/assets/swagger.yaml -o projects/pmrv-api/src/lib/ -g typescript-angular -c projects/pmrv-api/openapi-config.yaml --global-property supportingFiles=.openapi-generator-ignore",
    "generate:api": "openapi-generator-cli generate -i ./projects/pmrv-api/src/assets/swagger.yaml -o projects/pmrv-api/src/lib/ -g typescript-angular -c projects/pmrv-api/openapi-config.yaml --global-property skipFormModel=false",
    "postgenerate:api": "yarn generate:barrels:api && rimraf projects/pmrv-api/src/lib/.openapi-generator && ng lint --fix && pretty-quick",
    "analyze": "ng build --source-map --named-chunks && source-map-explorer dist/uk-pmrv-main-web/*.*.js",
    "lint": "ng lint",
    "release:patch": "yarn version --patch --no-commit-hooks --no-git-tag-version && conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:minor": "yarn version --minor --no-commit-hooks --no-git-tag-version && conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:major": "yarn version --major --no-commit-hooks --no-git-tag-version && conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepare": "husky install",
    "sonar": "sonar-scanner",
    "sonar:local": "sonar-scanner -Dsonar.host.url=http://localhost:9000 -Dsonar.login=admin -Dsonar.password=admin"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.5",
    "@angular/common": "^15.2.5",
    "@angular/compiler": "^15.2.5",
    "@angular/core": "^15.2.5",
    "@angular/forms": "^15.2.5",
    "@angular/platform-browser": "^15.2.5",
    "@angular/platform-browser-dynamic": "^15.2.5",
    "@angular/router": "^15.2.5",
    "@hmcts/frontend": "^0.0.50-alpha",
    "@ministryofjustice/frontend": "^0.2.4",
    "@w11k/git-info": "^1.0.1",
    "@zxcvbn-ts/core": "^2.0.1",
    "@zxcvbn-ts/language-en": "^2.0.1",
    "angular-password-strength-meter": "^5.0.0",
    "bignumber.js": "9.1.1",
    "clean-deep": "^3.3.0",
    "crypto-js": "^4.2.0",
    "dialog-polyfill": "^0.5.6",
    "google-libphonenumber": "^3.2.10",
    "govuk-frontend": "^3.9.1",
    "immer": "^9.0.19",
    "keycloak-angular": "14.0.0",
    "keycloak-js": "22.0.1",
    "lodash-es": "^4.17.15",
    "marked": "^4.0.17",
    "moment-timezone": "^0.5.43",
    "ng-inline-svg-2": "^15.0.1",
    "ngx-markdown": "^15.1.2",
    "papaparse": "^5.4.1",
    "rxjs": "~7.5.6",
    "sonar-scanner": "^3.1.0",
    "strip-html-comments": "^1.0.0",
    "tslib": "^2.4.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^15.0.0",
    "@angular-builders/jest": "^15.0.0",
    "@angular-devkit/build-angular": "^15.2.4",
    "@angular-eslint/builder": "^15.2.1",
    "@angular-eslint/eslint-plugin": "^15.2.1",
    "@angular-eslint/eslint-plugin-template": "^15.2.1",
    "@angular-eslint/schematics": "^15.2.1",
    "@angular-eslint/template-parser": "^15.2.1",
    "@angular/cli": "^15.2.4",
    "@angular/compiler-cli": "^15.2.5",
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@testing-library/angular": "^13.4.0",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/crypto-js": "^4.0.0",
    "@types/google-libphonenumber": "^7.4.18",
    "@types/gtag.js": "^0.0.12",
    "@types/jest": "^29.5.0",
    "@types/lodash-es": "^4.17.3",
    "@types/marked": "^4.0.3",
    "@types/node": "18.15.10",
    "@types/papaparse": "^5.3.7",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "barrelsby": "^2.2.0",
    "commit-message-validator": "^1.0.0",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsdoc": "^40.1.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.2",
    "fs-extra": "^10.0.0",
    "git-branch": "^2.0.1",
    "git-describe": "^4.1.0",
    "husky": "^7.0.0",
    "istanbul-combine": "^0.3.0",
    "jest": "^29.5.0",
    "jest-html-reporter": "^3.8.0",
    "jest-preset-angular": "^13.0.1",
    "ng-packagr": "^15.2.2",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.5.3",
    "terser-webpack-plugin": "^5.3.7",
    "ts-jest": "^29.1.0",
    "ts-node": "~8.10.2",
    "typescript": "4.9.5"
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^(build|ci|chore|docs|feat|fix|perf|refactor|revert|style|test)\\(([a-z0-9,;.\\-():']+)\\)\\:\\sPMRV-[0-9]+\\s\\-\\s[a-z0-9,;.\\-():'\\s]+",
      "errorMessage": "Commit message must follow the format: feat(ui): PMRV-123 - the message goes here"
    }
  }
}
